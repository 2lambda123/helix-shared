{
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "timezone": "Europe/Zurich",
  "packageRules": [
    {
      "packagePatterns": [
        "^@adobe/"
      ],
      "schedule": [
        "at any time"
      ],
      "groupName": "@adobe",
      "automerge": true,
      "major": {
        "automerge": false
      },
    },
    {
      "packagePatterns": [
        "^.+"
      ],
      "excludePackagePatterns": [
        "^@adobe/"
      ],
      "schedule": [
        "after 2pm on Monday"
      ],
      "groupName": "external",
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "datasources": ["orb"],
      "updateTypes": ["patch", "minor"],
      "automerge": true
    }
  ],
  "encrypted": {
    "npmToken": ""
  }
}
