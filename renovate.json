{
  "extends": [
    "config:base",
    ":semanticCommits"
  ],
  "timezone": "Europe/Zurich",
  "packageRules": [
    {
      "updateTypes": ["patch", "pin", "digest"],
      "automerge": true,
      "schedule": [
        "at any time"
      ],
      "groupName": "fixes"
    },
    {
      "packagePatterns": [
        "^@adobe/"
      ],
      "groupName": "@adobe",
      "automerge": true,
      "major": {
        "automerge": false
      },
      "schedule": [
        "at any time"
      ]
    },
    {
      "schedule": [
        "after 2pm on Monday"
      ],
      "packagePatterns": [
        "^.+"
      ],
      "excludePackagePatterns": [
        "^@adobe/"
      ],
      "groupName": "external",
      "patch": {
        "automerge": true
      }
    }
  ]
}
